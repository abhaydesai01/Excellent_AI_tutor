{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "..",
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".."
  },
  "include": ["./**/*.ts", "../src/lib/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
